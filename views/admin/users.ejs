<!-- Users Header -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
        <p style="color: var(--gray-500); margin: 0;">View and manage registered users</p>
    </div>
</div>

<!-- Users Table -->
<% if (users && users.length> 0) { %>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Reservations</th>
                    <th>Joined</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(u) { %>
                    <tr>
                        <td><strong>#<%= u.id %></strong></td>
                        <td>
                            <div style="display: flex; align-items: center; gap: 0.75rem;">
                                <div
                                    style="width: 40px; height: 40px; background: var(--primary-100); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: var(--primary-600); font-weight: 600;">
                                    <%= u.name.charAt(0).toUpperCase() %>
                                </div>
                                <strong>
                                    <%= u.name %>
                                </strong>
                            </div>
                        </td>
                        <td>
                            <%= u.email %>
                        </td>
                        <td>
                            <%= u.phone || '-' %>
                        </td>
                        <td>
                            <span class="badge" style="background: var(--gray-100); color: var(--gray-700);">
                                <%= u.reservation_count %> booking<%= u.reservation_count !==1 ? 's' : '' %>
                            </span>
                        </td>
                        <td style="color: var(--gray-500); font-size: 0.875rem;">
                            <%= new Date(u.created_at).toLocaleDateString() %>
                        </td>
                        <td>
                            <form action="/admin/users/delete/<%= u.id %>" method="POST" style="display: inline;"
                                onsubmit="return confirm('Are you sure you want to delete this user? This will not delete their reservations.')">
                                <button type="submit" class="btn btn-icon btn-ghost btn-sm" title="Delete User"
                                    style="color: var(--error);">
                                    <i data-lucide="trash-2" style="width: 16px; height: 16px;"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <p style="margin-top: 1rem; color: var(--gray-500);">
        Total: <%= users.length %> registered user<%= users.length !==1 ? 's' : '' %>
    </p>
    <% } else { %>
        <div class="empty-state" style="background: white; border-radius: var(--radius-lg); box-shadow: var(--shadow);">
            <div class="empty-state-icon">ðŸ‘¥</div>
            <h3 class="empty-state-title">No Registered Users</h3>
            <p class="empty-state-text">Users will appear here when they create accounts.</p>
        </div>
        <% } %>