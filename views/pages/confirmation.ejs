<!-- Page Header -->
<div class="page-header" style="background: linear-gradient(135deg, #065f46, #0d9488);">
    <div class="container">
        <div style="font-size: 4rem; margin-bottom: 1rem;">‚úÖ</div>
        <h1>Reservation Confirmed!</h1>
        <p>Thank you for your booking</p>
    </div>
</div>

<section class="section" style="padding-top: 2rem;">
    <div class="container">
        <div style="max-width: 800px; margin: 0 auto;">
            <!-- Confirmation Details -->
            <div
                style="background: white; border-radius: var(--radius-lg); overflow: hidden; box-shadow: var(--shadow); margin-bottom: 2rem;">
                <div style="background: var(--success-light); padding: 1.5rem; border-bottom: 1px solid #a7f3d0;">
                    <h2 style="color: #065f46; margin: 0; display: flex; align-items: center; gap: 0.75rem;">
                        <i data-lucide="check-circle" style="width: 28px; height: 28px;"></i>
                        Booking Reference: #<%= reservation.id %>
                    </h2>
                </div>

                <div style="padding: 2rem;">
                    <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem;">
                        <div>
                            <h3 style="font-size: 1rem; color: var(--gray-500); margin-bottom: 0.5rem;">Hostel</h3>
                            <p style="font-size: 1.125rem; font-weight: 600; margin: 0;">
                                <%= reservation.hostel_name %>
                            </p>
                            <p style="color: var(--gray-500); margin: 0;">
                                <%= reservation.location %>
                            </p>
                        </div>

                        <div>
                            <h3 style="font-size: 1rem; color: var(--gray-500); margin-bottom: 0.5rem;">Guest Name</h3>
                            <p style="font-size: 1.125rem; font-weight: 600; margin: 0;">
                                <%= reservation.guest_name %>
                            </p>
                        </div>

                        <div>
                            <h3 style="font-size: 1rem; color: var(--gray-500); margin-bottom: 0.5rem;">Check-in Date
                            </h3>
                            <p style="font-size: 1.125rem; font-weight: 600; margin: 0;">
                                <%= new Date(reservation.check_in).toLocaleDateString('en-US', { weekday: 'long' ,
                                    year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                            </p>
                        </div>

                        <div>
                            <h3 style="font-size: 1rem; color: var(--gray-500); margin-bottom: 0.5rem;">Check-out Date
                            </h3>
                            <p style="font-size: 1.125rem; font-weight: 600; margin: 0;">
                                <%= new Date(reservation.check_out).toLocaleDateString('en-US', { weekday: 'long' ,
                                    year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                            </p>
                        </div>

                        <div>
                            <h3 style="font-size: 1rem; color: var(--gray-500); margin-bottom: 0.5rem;">Email</h3>
                            <p style="font-size: 1rem; margin: 0;">
                                <%= reservation.guest_email %>
                            </p>
                        </div>

                        <div>
                            <h3 style="font-size: 1rem; color: var(--gray-500); margin-bottom: 0.5rem;">Phone</h3>
                            <p style="font-size: 1rem; margin: 0;">
                                <%= reservation.guest_phone %>
                            </p>
                        </div>
                    </div>

                    <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--gray-200);">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <span style="font-size: 1.125rem; color: var(--gray-600);">Price per night</span>
                            <span style="font-size: 1.5rem; font-weight: 700; color: var(--primary-600);">GH‚Çµ<%=
                                    reservation.price.toFixed(2) %></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Instructions -->
            <div
                style="background: white; border-radius: var(--radius-lg); overflow: hidden; box-shadow: var(--shadow); margin-bottom: 2rem;">
                <div style="background: var(--warning-light); padding: 1.5rem; border-bottom: 1px solid #fde68a;">
                    <h2 style="color: #92400e; margin: 0; display: flex; align-items: center; gap: 0.75rem;">
                        <i data-lucide="credit-card" style="width: 28px; height: 28px;"></i>
                        Complete Your Payment
                    </h2>
                </div>

                <div style="padding: 2rem;">
                    <p style="color: var(--gray-600); margin-bottom: 1.5rem;">
                        To confirm your reservation, please make payment using one of the following methods.
                        Include your booking reference <strong>#<%= reservation.id %></strong> in the payment
                        description.
                    </p>

                    <% if (paymentInfo) { %>
                        <div class="payment-methods">
                            <!-- Bank Transfer -->
                            <div class="payment-card">
                                <div class="payment-icon">üè¶</div>
                                <h3 class="payment-title">Bank Transfer</h3>

                                <div class="payment-detail">
                                    <div class="payment-label">Bank Name</div>
                                    <div class="payment-value">
                                        <%= paymentInfo.bank_name %>
                                    </div>
                                </div>

                                <div class="payment-detail">
                                    <div class="payment-label">Account Number</div>
                                    <div class="payment-value">
                                        <%= paymentInfo.account_number %>
                                    </div>
                                </div>

                                <div class="payment-detail">
                                    <div class="payment-label">Account Name</div>
                                    <div class="payment-value">
                                        <%= paymentInfo.account_name %>
                                    </div>
                                </div>
                            </div>

                            <!-- Mobile Money -->
                            <div class="payment-card">
                                <div class="payment-icon">üì±</div>
                                <h3 class="payment-title">Mobile Money</h3>

                                <div class="payment-detail">
                                    <div class="payment-label">Provider</div>
                                    <div class="payment-value">
                                        <%= paymentInfo.momo_provider %>
                                    </div>
                                </div>

                                <div class="payment-detail">
                                    <div class="payment-label">Number</div>
                                    <div class="payment-value">
                                        <%= paymentInfo.momo_number %>
                                    </div>
                                </div>

                                <div class="payment-detail">
                                    <div class="payment-label">Name</div>
                                    <div class="payment-value">
                                        <%= paymentInfo.momo_name %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% if (paymentInfo.instructions) { %>
                            <div
                                style="margin-top: 1.5rem; padding: 1rem; background: var(--gray-50); border-radius: var(--radius);">
                                <p style="margin: 0; color: var(--gray-600);">
                                    <strong>Note:</strong>
                                    <%= paymentInfo.instructions %>
                                </p>
                            </div>
                            <% } %>
                                <% } else { %>
                                    <p>Payment information not available. Please contact us for payment details.</p>
                                    <% } %>
                </div>
            </div>

            <!-- Next Steps -->
            <div
                style="background: var(--gray-50); border-radius: var(--radius-lg); padding: 2rem; text-align: center;">
                <h3 style="margin-bottom: 1rem;">What's Next?</h3>
                <ol style="text-align: left; max-width: 400px; margin: 0 auto 1.5rem; color: var(--gray-600);">
                    <li style="margin-bottom: 0.5rem;">Make payment using one of the methods above</li>
                    <li style="margin-bottom: 0.5rem;">Include booking reference #<%= reservation.id %> in payment
                            description</li>
                    <li style="margin-bottom: 0.5rem;">We'll confirm your booking via email</li>
                    <li>Show up on your check-in date!</li>
                </ol>

                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                    <a href="/hostels" class="btn btn-outline">Browse More Hostels</a>
                    <a href="/" class="btn btn-primary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</section>